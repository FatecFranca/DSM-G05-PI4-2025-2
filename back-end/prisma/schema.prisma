datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String
  nomeUsuario String   @unique
  email    String   @unique
  senha    String
  tipo     String
  veiculos Veiculo[]
}

model Veiculo {
  id        Int      @id @default(autoincrement())
  modelo    String
  cor       String
  placa     String   @unique
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
}

model ListaControle {
  id        Int      @id @default(autoincrement())
  placa     String
  motivo    String?
  horaEntrada DateTime @default(now())
  horaSaida DateTime?
}