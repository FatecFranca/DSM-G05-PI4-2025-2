datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum TipoUsuario {
  ADMIN
  MORADOR
  PORTEIRO
}

model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String
  email    String   @unique
  senha    String
  tipo     TipoUsuario @default(MORADOR)
  veiculos Veiculo[]
  
  visitantes Visitante[]
}

model Veiculo {
  id          Int        @id @default(autoincrement())
  modelo      String
  cor         String
  placa       String     @unique
  usuarioId   Int?
  usuario     Usuario?   @relation(fields: [usuarioId], references: [id])

  visitanteId Int?
  visitante   Visitante? @relation(fields: [visitanteId], references: [id])

  listaControles ListaControle[]
}

model Visitante {
  id        Int       @id @default(autoincrement())
  nome      String
  documento String?
  veiculos  Veiculo[]

  usuarioId Int
  usuario   Usuario    @relation(fields: [usuarioId], references: [id])
}

model ListaControle {
  id          Int       @id @default(autoincrement())
  placa       String
  motivo      String?
  horaEntrada DateTime  @default(now())
  horaSaida   DateTime?
  
  veiculoId   Int?
  veiculo     Veiculo?  @relation(fields: [veiculoId], references: [id])
}